#include <iostream>

using namespace std;

class ClassA;

class ClassB {
private:
    int b1;
    int b2;

public:
    ClassB(int x, int y) : b1(x), b2(y) {}

    friend void add(const ClassA& a, const ClassB& b);
};

class ClassA {
private:
    int a1;
    int a2;

public:
    ClassA(int x, int y) : a1(x), a2(y) {}

    friend void add(const ClassA& a, const ClassB& b);
};

void add(const ClassA& a, const ClassB& b) {
    int sumA = a.a1 + a.a2;
    int sumB = b.b1 + b.b2;
    cout << "Сумма полей ClassA: " << sumA << endl;
    cout << "Сумма полей ClassB: " << sumB << endl;
    cout << "Общая сумма: " << sumA + sumB << endl;
}

int main() {
    ClassA objA(3, 5);
    ClassB objB(2, 4);

    add(objA, objB);
}
