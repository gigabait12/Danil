#include <iostream>
#include <string>

using namespace std;

class Animal {
private:
    string name;
    int weight;
protected:
    string type;

public:
    Animal(const string& name, int weight) : name(name), weight(weight) {}

    void print() const {
        cout << "Имя: " << name << ", Вес: " << weight << " кг" << endl;
    }
};

class Cat : public Animal {
public:
    Cat(const string& name, int weight) : Animal(name, weight) {
        type = "Кошка";
    }
};

class Dog : public Animal {
public:
    Dog(const string& name, int weight) : Animal(name, weight) {
        type = "Собака";
    }
};

int main() {
    Cat cat1("Мурка", 4);
    Dog dog1("Шарик", 10);

    cat1.print();
    dog1.print();

    return 0;
}
