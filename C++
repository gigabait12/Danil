#include <iostream>
#include <string>

using namespace std;

class IStringAnalyzer {
public:
    virtual int analyse(const string& str) = 0;
    virtual ~IStringAnalyzer() {}
};

class LowercaseAnalyzer : public IStringAnalyzer {
public:
    int analyse(const string& str) override {
        int count = 0;
        for (char c : str) {
            if (islower(c)) {
                count++;
            }
        }
        return count;
    }
};

class UppercaseAnalyzer : public IStringAnalyzer {
public:
    int analyse(const string& str) override {
        int count = 0;
        for (char c : str) {
            if (isupper(c)) {
                count++;
            }
        }
        return count;
    }
};

int main() {
    string input;
    cout << "Введите строку (только латинские буквы): ";
    cin >> input;

    LowercaseAnalyzer lowercaseAnalyzer;
    UppercaseAnalyzer uppercaseAnalyzer;

    int lowercaseCount = lowercaseAnalyzer.analyse(input);
    int uppercaseCount = uppercaseAnalyzer.analyse(input);

    cout << "Количество строчных символов: " << lowercaseCount << endl;
    cout << "Количество заглавных символов: " << uppercaseCount << endl;

}
